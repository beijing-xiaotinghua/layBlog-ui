{
  "name": "blog",
  "version": "1.0.1",
  "description": "blog vue ssr",
  "author": "buptzlk",
  "private": true,
  "scripts": {
    "dev": "nuxt --hostname localhost --port 3001",
    "build": "nuxt --hostname localhost --port 3001 && nuxt build",
    "start": "nuxt --hostname localhost --port 3001 && nuxt start",
    "server": "npm run build && pm2 delete blog && pm2 start npm --name 'blog' -- start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "firstserver": "npm run build && pm2 start npm --name 'blog' -- start",
    "list": "pm2 list",
    "stop": "pm2 stop 'blog'"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "crypto": "^1.0.1",
    "element-ui": "^2.3.6",
    "highlight.js": "^9.12.0",
    "html2canvas": "^1.0.0-rc.3",
    "identicon.js": "^2.3.3",
    "jquery": "^3.4.1",
    "marked": "^0.3.19",
    "mobx": "^4.2.0",
    "nuxt": "^1.0.0",
    "qrcode": "^1.4.1",
    "vue-cookie": "^1.1.4",
    "wangeditor": "^3.1.1"
  },
  "devDependencies": {
    "@nuxtjs/axios": "^5.3.1",
    "@nuxtjs/proxy": "^1.2.4",
    "babel-eslint": "^8.2.1",
    "babel-plugin-component": "^1.1.0",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "pm2": "^2.10.3"
  }
}
